/**index.wxss**/
.login {
  width: 608rpx;
  height: auto;
  margin: 0 auto;
  overflow: hidden;
}
.login-hi {
  width: 275rpx;
  height: 50rpx;
  margin: 180rpx 0 86rpx 0;
}
.login-text {
  width: 100%;
  height: auto;
  font-size: 36rpx;
  margin-bottom: 15rpx;
}
.login-text:nth-child(3) {
  margin-bottom: 58rpx;
}
.login-input {
  width: 100%;
  height: 115rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.login-input input {
  font-size: 28rpx;
  color: #757475;
  height: 35rpx;
  line-break: 35rpx;
  padding: 40rpx 0;
}
.login-agreement {
  width: auto;
  height: 28rpx;
  font-size: 28rpx;
}
.login-checkbox {
  width: 28rpx;
  height: 28rpx;
}
.login-btn {
  width: 608rpx;
  height: 94rpx;
  margin-top: 82rpx;
}
.row {
  width: 100%;
  height: 115rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin: 0 auto;
}
.label {
  font-size: 28rpx;
}
.checkbox {
  width: 30rpx;
  height: 30rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.checkbox-icon {
  width: 30rpx;
  height: 30rpx;
  display: block;
}

/* 授权 */
.authorize {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  z-index: 100;
}
.authorize-content {
  width: 450rpx;
  height: 350rpx;
  padding: 40rpx;
  background-color: #ffffff;
  overflow: hidden;
  border-radius: 5rpx;
}
.authorize-header {
  font-size: 36rpx;
}
.authorize-title {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}
.authorize-portrait {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 50%;
}
.authorize-name {
  width: 340rpx;
  font-size: 30rpx;
  line-height: 80rpx;
}
.authorize-detail {
  font-size: 26rpx;
  line-height: 50rpx;
  color: #757475;
  position: relative;
  text-indent: 35rpx;
  margin: 30rpx 0;
}
.authorize-detail::before {
  content: '';
  width: 12rpx;
  height: 12rpx;
  background-color: #757475;
  position: absolute;
  top: 20rpx;
  left: 10rpx; 
  border-radius: 50%;
}
.authorize-btns {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.authorize-reject {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.authorize-approve {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}