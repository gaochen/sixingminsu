.calender-container {
  width: 100%;
  height: auto;
  overflow: hidden;
}
.calender-header {
  width: 100%;
  font-size: 34rpx;
  text-indent: 60rpx;
  color: #332c2b;
  margin: 50rpx 0 30rpx 0;
}
.calender-body {
  width: 742rpx;
  margin: 0 auto;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.calender-date {
  box-sizing: border-box;
  font-size: 38rpx;
  width: 109rpx;
  height: 107rpx;
  border: 1rpx solid #e5e5e5;
  margin-top:-1rpx;
  margin-left:-1rpx;
  font-weight: bold;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.calender-disable {
  background-color: #f5f5f5;
}
.calender-disable .calender-text {
  color: #a1a1a1;
  text-decoration: line-through;
}
.calender-none {
  border: 0;
}
.calender-text {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.selected  {
  background-color: #ffffff;
}
.selected .calender-text {
  background-color: #000000;
  color: #ffffff;
  border-radius: 50rpx;
  text-decoration: none;
}